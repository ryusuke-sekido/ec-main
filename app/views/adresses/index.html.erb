<h1>Adresses#index</h1>

<%= form_with model:@adress, url: '/adresses', method: :post do |f| %>
<p>配送先登録機能</p>
 <h2>住所</h2>
 <%=f.text_field :title %>
 <h2>建物名・部屋番号など</h2>
 <%=f.text_area :body %>
 <%=f.submit '登録' %>
<% end %>

<p>配送先一覧画面</p>
<% @adresses.each do |adress| %>
 <p></p>
 <span>・<%= adress.title %> <%= adress.body %></span>
<% end %>

